    <link rel="stylesheet" href="../scss/style.css" />
    <title>Welcome to the DevConnector</title>
  </head>
  <body>
    <nav class="navbar bg-dark">
      <h1>
        <a href="/"> <i class="fas fa-hands-helping"></i> Rotaractors</a>
      </h1>
      <ul>
        <li><a href="/profiles">Developers</a></li>
        <li><a href="/register">Register</a></li>
        <li><a href="/user/login">login</a></li>
      </ul>
    </nav>
    <section class="container">
      <!-- <h1 class="large text-primary">
        Sign Up
      </h1> -->
      <p class="lead"><i class="fas fa-user"></i> Edit Your Details</p>
      <form method= "POST" action= "/edit/<%=RtrList._id%>" class="form">
        <div class="form-group">
          <input type="text" placeholder="Name" name="name" value="<%=RtrList.name%>" />
        </div>
        <div class="form-group">
          <input type="text" placeholder="Designation" name="post" value="<%=RtrList.post%>" />
        </div> 
        <div class="form-group">
          <input type="email" placeholder="Email Address" name="email" value="<%=RtrList.email%>"/>
          <small class="form-text">
            This site uses Gravatar, so if you want a profile image, use a
            Gravatar email
          </small>
        </div>
        <div class="form-group">
          <input type="text" placeholder="Enter Your phone Number" name="number" minlength="10" value="<%=RtrList.number%>"/>
        </div>
        <!-- <div class="form-group">
          <input type="text" placeholder="whatsapp number" name="whnumber" minlength="10" value="<%=RtrList.whnumber%>" />
        </div> -->
        <div class="form-group">
          <input type="text" placeholder="Department" name="department" value="<%=RtrList.department%>" />
        </div> 
        
        <div class="form-group">
          <textarea placeholder="Address" name="address" value="<%=RtrList.address %>" ></textarea>
        </div> 
        
        
        <!-- <!-- <div class="form-group">
          <input type="password" placeholder="Confirm Password" minlength="6" name="password2" />
        </div> -->
        <input type="submit" value="Submit" class="btn btn-primary" />
      </form> 
      <p class="my-1">
        Already have an account? <a href="/user/login">Sign In</a>
      </p>
    </section>
  </body>
</html>