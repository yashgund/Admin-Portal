  <body>
    <nav class="navbar bg-dark">
      <h1>
        <a href="/"> <i class="fas fa-hands-helping"></i> Rotaractors</a>
      </h1>
      <ul>
        <li><a href="/profiles">Board</a></li>
        <li><a href="/register" active >Register</a></li>
        <li><a href="/user/login">Login</a></li>
      </ul>
    </nav>
    <section class="container">
      <h1 class="large text-primary">
        Sign up
      </h1>
      
      <p class="lead"><i class="fas fa-user"></i> Register To the Database</p>

      <% if(error_msg !=''){ %>
        <div class="flash_error" role="alert">
          <%= error_msg %>
         
        </div>
        <% } %>
      
      <form method= "POST" action= "/register" class="form">
      
       <div class="form-group">
        <input type="text" placeholder="Name" name="name" autocomplete="off" required />
      </div> 
      <div class="form-group">
        <input type="email" placeholder="Email Address" name="email" />
        
      </div>
      <div class="form-group">
        <input type="password" placeholder="password" name="password" minlength="4" autocomplete="off"/>
      </div>
      <div class="form-group">
        <input type="radio" value="Male" name="gender" minlength="4" required />
        <label for="gender">Male</label>


        <input type="radio" style="margin: 5px;" name="gender"  value="Female"  required />
        <label for="gender">Female</label>
      </div>
      <input type="submit" value="Submit" class="btn btn-primary" />
    </form> 
    <p class="my-1">
      Already have an account? <a href="/user/login">Sign In</a>
    </p>
